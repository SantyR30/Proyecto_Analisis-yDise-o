<%
let body = '    <!-- Banner Promocional -->';
body += '<section class="banner-section">';
body += '<div class="banner-container">';
body += '<div class="banner-content">';
body += '<div class="banner-illustration">';
body += '<div class="banner-elements">';
body += '<i class="fas fa-shopping-cart banner-cart"></i>';
body += '<div class="banner-stores">';
body += '<div class="store">ONLINE STORE</div>';
body += '<div class="store">STORE</div>';
body += '</div>';
body += '<i class="fas fa-truck banner-truck"></i>';
body += '<div class="banner-boxes">';
body += '<div class="box"></div>';
body += '<div class="box"></div>';
body += '<div class="box"></div>';
body += '</div>';
body += '</div>';
body += '</div>';
body += '<div class="banner-text">';
body += '<h1 class="banner-title">Online.</h1>';
body += '<h2 class="banner-subtitle">SHOPPING</h2>';
body += '</div>';
body += '</div>';
body += '<div class="banner-controls">';
body += '<button class="banner-arrow left"><i class="fas fa-chevron-left"></i></button>';
body += '<button class="banner-arrow right"><i class="fas fa-chevron-right"></i></button>';
body += '</div>';
body += '</div>';
body += '</section>';
body += '    <!-- Catálogo de Productos -->';
body += '<section class="products-section">';
if (typeof categoriaFiltro !== 'undefined' && categoriaFiltro !== 'todas') {
    body += '<div class="filter-info">';
    body += '<h2 class="filter-title">Categoría: ' + categoriaFiltro + '</h2>';
    body += '<a href="/" class="btn-clear-filter"><i class="fas fa-times"></i> Ver todas</a>';
    body += '</div>';
}
body += '<div class="products-container">';
body += '<div class="products-grid">';

if (typeof products !== 'undefined' && products.length > 0) {
    products.forEach(product => {
        body += '<div class="product-card" data-product-id="' + product.id + '">';
        body += '<div class="product-image">';
        body += '<i class="' + product.icon + '"></i>';
        body += '</div>';
        body += '<h3 class="product-title">' + product.title + '</h3>';
        body += '<p class="product-description">' + product.description + '</p>';
        body += '<div class="product-price">$' + new Intl.NumberFormat('es-CO').format(product.price) + '</div>';
        body += '<button class="btn-add-cart" ';
        body += 'data-product-id="' + product.id + '" ';
        body += 'data-product-title="' + product.title + '" ';
        body += 'data-product-price="' + product.price + '" ';
        body += 'data-product-description="' + product.description + '" ';
        body += 'data-product-icon="' + product.icon + '">';
        body += '<i class="fas fa-shopping-cart"></i>';
        body += 'Agregar al carrito';
        body += '</button>';
        body += '</div>';
    });
} else {
    body += '<p>No hay productos disponibles</p>';
}

body += '</div>';
body += '</div>';
body += '</section>';
%>
<%- include('layout/layout', { title: 'SGEE - Inicio', body: body }) %>
