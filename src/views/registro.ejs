<%
let body = '<div class="auth-page">';
body += '<div class="auth-header">';
body += '<div class="auth-logo">';
body += '<div class="auth-logo-box">';
body += '<span class="auth-logo-text">SGEE</span>';
body += '<div class="auth-logo-icons">';
body += '<i class="fas fa-truck"></i>';
body += '<i class="fas fa-home"></i>';
body += '</div>';
body += '</div>';
body += '<p class="auth-subtitle">Sistema de ventas y entregas online</p>';
body += '</div>';
body += '</div>';
body += '<div class="auth-container">';
body += '<div class="auth-card">';
body += '<div class="auth-tabs">';
body += '<a href="/login" class="auth-tab">Iniciar sesión</a>';
body += '<a href="/registro" class="auth-tab active">Registrarse</a>';
body += '</div>';
body += '<form class="auth-form" id="register-form" method="POST" action="/registro">';
body += '<div class="form-group">';
body += '<label for="nombre">Nombre completo</label>';
body += '<input type="text" id="nombre" name="nombre" class="form-input" required>';
body += '</div>';
body += '<div class="form-group">';
body += '<label for="apellidos">Apellidos completos</label>';
body += '<input type="text" id="apellidos" name="apellidos" class="form-input" required>';
body += '</div>';
body += '<div class="form-group">';
body += '<label for="email">Email</label>';
body += '<input type="email" id="email" name="email" class="form-input" required>';
body += '</div>';
body += '<div class="form-group">';
body += '<label for="password">Contraseña</label>';
body += '<input type="password" id="password" name="password" class="form-input" required>';
body += '</div>';
body += '<div class="form-group">';
body += '<label for="confirm-password">Confirmar Contraseña</label>';
body += '<input type="password" id="confirm-password" name="confirmPassword" class="form-input" required>';
body += '</div>';
if (typeof error !== 'undefined' && error) {
    body += '<div class="error-message">' + error + '</div>';
}
body += '<button type="submit" class="btn-auth">Crear cuenta</button>';
body += '</form>';
body += '<div class="auth-footer">';
body += '<span>Ya tienes cuenta?</span>';
body += '<a href="/login" class="auth-link">Inicia sesion</a>';
body += '</div>';
body += '</div>';
body += '</div>';
body += '</div>';
%>
<%- include('layout/layout', { title: 'SGEE - Registrarse', body: body }) %>
