<%
const body = `
    <div class="cart-page">
        <div class="cart-container">
            <!-- Carrito de Compras -->
            <div class="cart-section">
                <h2 class="cart-title">Carrito de compras</h2>
                
                <div class="cart-items">
                    <!-- Item del carrito -->
                    <div class="cart-item">
                        <div class="cart-item-image">
                            <i class="fas fa-laptop"></i>
                        </div>
                        <div class="cart-item-details">
                            <h3 class="cart-item-title">Laptop Pro 15</h3>
                            <p class="cart-item-description">Potente laptop para profesionales con procesador de última generación</p>
                            <div class="cart-item-price">$ 2.500.000</div>
                        </div>
                        <div class="cart-item-controls">
                            <button class="quantity-btn minus">
                                <i class="fas fa-minus"></i>
                            </button>
                            <span class="quantity">1</span>
                            <button class="quantity-btn plus">
                                <i class="fas fa-plus"></i>
                            </button>
                        </div>
                        <button class="delete-item">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Resumen de Orden -->
            <div class="order-summary">
                <h2 class="summary-title">Orden del pedido</h2>
                
                <div class="summary-details">
                    <div class="summary-row">
                        <span>Subtotal</span>
                        <span>$ 2.500.000</span>
                    </div>
                    <div class="summary-row">
                        <span>Envío</span>
                        <span>$ 2.000</span>
                    </div>
                    <div class="summary-divider"></div>
                    <div class="summary-row total">
                        <span>Total</span>
                        <span>$ 2.502.000</span>
                    </div>
                </div>

                <div class="shipping-section">
                    <label for="shipping-address">Dirección de envío</label>
                    <input 
                        type="text" 
                        id="shipping-address" 
                        class="shipping-input" 
                        placeholder="Ingresa tu dirección completa"
                    >
                </div>

                <button class="btn-finalize" onclick="window.location.href='/confirmacion'">
                    Finalizar compra
                </button>
            </div>
        </div>
    </div>
`;
%>
<%- include('layout/layout', { title: 'SGEE - Carrito de Compras', body: body }) %>
